

unix2doc 1.txt # \n --> \r\n
dos2unix 1.txt # \r\n --> \n

mkdir    abc   # 创建目录
mkdir -p a/b/c # 递归创建目录, 目录已存在时不报错

rmdir abc                            # 删除空目录
rmdir -p a/b/c                       # 递归删除, 相当于依次删除 a/b/c a/b a
rmdir --ignore-fail-on-non-empty abc # 忽略非空目录

wc    # 输出 换行符数 字符串数 字节数
wc -l #   行数
wc -w # 字符串数
wc -c # 字节数
wc -m # 字符数

