
tar -xvf /path/to/foo.tar -C /path/to/destination/      # 解包
tar -cvf /path/to/foo.tar /path/to/foo/                 # 打包

tar -xzvf /path/to/foo.tgz                              # 解压缩 .tgz
tar -xzvf /path/to/foo.tar.gz                           # 解压缩 .tar.gz
tar -xjvf /path/to/foo.tar.bz2                          # 解压缩 .tar.bz2

tar -czvf /path/to/foo.tgz     /path/to/foo/            # 压缩成 .tgz
tar -czvf /path/to/foo.tar.gz  /path/to/foo/            # 压缩成 .tar.gz
tar -cjvf /path/to/foo.tar.bz2 /path/to/foo/            # 压缩成 .tar.bz2

tar -czvf /path/to/foo.tgz --exclude=\*.o /path/to/foo/ # 忽略 .o 文件

